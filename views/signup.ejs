<html>
<head>
    <title>Register</title>
</head>
<% include ./partials/header %>
<body class="container">
<div class="page-header">
    <h1>Local Government Land Audit System</h1>
</div>

<div class="container row vertical-offset-100">
    <div class="jumbotron col-md-8 col-md-offset-2 pull-center">

        <form action="/signup" method="post">
            <div class="card-body">

                <% if(flash.error){ %>
                <div class="alert alert-danger" role="alert">
                    <%= flash.error %>
                </div>
                <% } %>
                <div class="form-group">
                    <label for="exampleInputEmail1">Username</label>
                    <input  name="username" type="text" class="form-control" id="username" placeholder="Enter Username">
                </div>
                <div class="form-group">
                    <label>Email:</label>
                    <input type="email" name="email" class="form-control" id="email" placeholder="someone@email.com" />
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" name="password" placeholder="Password">
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1"> Confirm Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword2" name="confirm_password" placeholder="Confirm Password">
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">Type of User</label>
                    <select class="form-control" id="user_type" name="user_type">
                        <option >--Select--</option>
                        <option value="local">Local Authority Technician</option>
                        <option value="ministry">Ministry Official</option>
                    </select>
                </div>

                <div class="form-group" id="location" style="display:none;">
                    <label for="exampleInputPassword1">User Location</label>
                    <select class="form-control" id="user_location" name="user_location">
                        <option>--Select--</option>
                        <option value="chegutu">Chegutu</option>
                        <option value="marondera">Marondera</option>
                    </select>
                </div>

                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Register"/>
                </div>

                <small><a href="/login">Want to login? Click here  to  login</a></small>

            </div>
        </form>


    </div>
</div>
</body>
<footer>
    <div class="container row vertical-offset-100">
        <div class="col-md-4 col-md-offset-4 pull-center">
            <% include ./partials/footer %>
        </div>
    </div>
</footer>
</html>

<script>

    //onchange function for user type
    $(document).ready(function(){
        $('#user_type').on('change', function() {
            if ( this.value == 'local')
            {
                $("#location").show();
            }
            else
            {
                $("#location").hide();
            }
        });
    });

    //check if password 1 and password 2 are the same

</script>